  <h1><%= @recipe.name %> Recipe </h1>
<div class="row">
    <div class="col s12">
      <div class="card grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
          <p><h4><%= @recipe.meal_type %>
          <h5 class="bold">Serving:</h5><p><%= @recipe.servings %>
          <p><h5 class="bold">Prep Time:</h5><p><%= @recipe.prep_hr %> hour(s) <%= @recipe.prep_min %> minutes</p>
          <h5 class="bold">Cook Time:</h5><%= @recipe.time_hr %> hour(s) <%= @recipe.time_min %> minutes</p>
          <h5 class="bold">Ingredients:</h5><p>
          <%= @recipe.ingredients %>
          <h5 class="bold">Instructions:</h5><p><%= @recipe.instructions %></p>
        </div>
        <div class="card-action">
          <a href="/recipes/<%= @recipe.id %>/edit">Edit</a><br><br>
            <form class action="/recipes/<%= @recipe.id %>" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="submit" value="Delete Recipe">
              </form>
        </div>
      </div>
    </div>
  </div>