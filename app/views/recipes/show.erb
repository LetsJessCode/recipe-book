  <h1><%= @recipe.name %> Recipe </h1>
 
   
<div class="row">
    <div class="center col s12"><h4><%= @recipe.meal_type %></h4>
    </div>
    <div class="col s12 m4 l2"><h5 class="bold">Serving:</h5><p><%= @recipe.servings %></p></div>
    <div class="center col s12 m4 l8"><h5 class="bold">Prep Time:</h5><p> <%=  @recipe.prep_hr %> hour(s) <%= @recipe.prep_min %> minutes</p></div>
    <div class="col s12 m4 l2"><h5 class="bold">Cook Time:</h5><p> <%= @recipe.time_hr %> hour(s) <%= @recipe.time_hr %> hour(s)</p></div>
  </div>
  <div class="row">
    <div class="col s12 m6"><h5 class="bold">Ingredients:</h5><p> <%= @recipe.ingredients %> </p></div>
    <div class="col s12 m6"><h5 class="bold">Instructions:</h5><p> <%= @recipe.instructions %></p></div>
  </div>
  
  <h5> Click <a href="/recipes/<%= @recipe.id %>/edit"> Edit </a> to update your <%= @recipe.name %> Recipe <br></h5>

