


<div>
<form action="/recipes/<%= @recipe.id %>%" method="post">
<input type="hidden" name="_method" value="patch">
<label for="recipe name">Name of Recipe:</label>
<input type="text" name="recipe[name]" value="<%= @recipe.name %>" id="name">
<label for="meal_type">Meal Type:</label>
<input type="text" name="recipe[meal_type]" value="<%= @recipe.meal_type %>" id="meal_type"><br><br>
<label for="prep_time">Prep Time:</label>
<input type="integer" name="recipe[prep_hr]" value="<%= @recipe.prep_hr %>" id="prep_hr">
<input type="integer" name="recipe[prep_min]" value="<%= @recipe.prep_min %>" id="prep_min">
<label for="time">Cooking Time:</label>
<input type="integer" name="recipe[time_hr]" value="<%= @recipe.time_hr %>" id="time_hr">
<input type="integer" name="recipe[time_min]" value="<%= @recipe.time_min %>" id="time_min"><br><br>
<label for="servings">Servings:</label>
<input type="integer" name="recipe[servings]" value="<%= @recipe.servings %>" id="servings"><br><br>
<label for="ingredients">Ingredients:</label><br><br>
<textarea name="recipe[ingredients]" id="ingredients" cols="34" rows="8" value="<%= @recipe.ingredients %>"></textarea><br><br>

<label for="instructions">Instructions:</label><br><br>
<textarea name="recipe[instructions]" id="instructions" cols="40" rows="10" value="<%= @recipe.instructions %>"</textarea><br><br>

<input type="submit" value="Edit Recipe">
</form>


<form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Recipe">
 </form> 
</div>