
<h1>Edit <%= @recipe.name %></h1>

<div>
<form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="text" name="recipe[name]" value="<%= @recipe.name %>" id="name">
    <label for="meal_type">Meal Type:</label>
    <input type="text" name="recipe[meal_type]" value="<%= @recipe.meal_type %>" id="meal_type"><br><br>
    <div class="row">
        <div class="col s12 m4 l3">
            <label for="prep_time"><h5 class="bold">Prep Time:</h5></label><br>
            <input type="integer" name="recipe[prep_hr]" value="<%= @recipe.prep_hr %>" id="prep_hr"><br>
            <input type="integer" name="recipe[prep_min]" value="<%= @recipe.prep_min %>" id="prep_min"><br><br>
        </div>
        <div class="row">
            <div class="col s12 m4 l3">
                <label for="time"><h5 class="bold">Cook Time:</h5></label><br>
                <input type="integer" name="recipe[time_hr]" value="<%= @recipe.time_hr %>" id="time_hr"><br>
                <input type="integer" name="recipe[time_min]" value="<%= @recipe.time_min %>" id="time_min"><br><br>  
            </div>
            <div class="col s12 m3">
                <label for="servings"><h5 class="bold">Serving(s):</h5></label><br>
                <input type="integer" name="recipe[servings]" value="<%= @recipe.servings %>" id="servings">
            </div>
     <div class="row">
        <div class="col s12 m3">
            <div class="input-field col s12">
             <label for="ingredients"><h5 class="bold">Ingredient(s):</h5></label><br><br>
                <textarea type="comment" id="ingredients" class="materialize-textarea" name="recipe[ingredients]"><%= @recipe.ingredients %></textarea> <br><br>
            </div>   
        </div> 
        <br>  
            <div class="row">
                <div class= "input-field col s12">       
                     <label for="instructions"><h5 class="bold">Instructions:</h5></label><br>
                      <textarea type="comment" id="instructions" class="materialize-textarea" name="recipe[instructions]"><%= @recipe.instructions %></textarea><br>
                    <input type="submit" value="Update Recipe">
                    <br> <br>
                </div>  
            </div>
        </div>
    </form>
</div>
